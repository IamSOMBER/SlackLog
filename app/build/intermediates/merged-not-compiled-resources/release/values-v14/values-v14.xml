<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorPrimaryDark">@color/blue_800</item>
        <item name="android:textColorPrimary">@color/grey_800</item>
        <item name="colorAccent">@color/red_900</item>
        <item name="android:windowBackground">@color/grey_white_1000</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:spinnerDropDownItemStyle">@style/MyDropDownNav</item>
        <item name="android:dropDownSpinnerStyle">@style/MyDropDownNav</item>
        <item name="android:spinnerItemStyle">@style/MyDropDownNav</item>
    </style>
    <style name="MyDropDownNav" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:popupBackground">@color/blue_900</item>
        <item name="android:divider">@null</item>
    </style>
</resources>