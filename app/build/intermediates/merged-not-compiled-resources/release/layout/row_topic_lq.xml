<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    card_view:cardBackgroundColor="#E6E6E6"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAuthor"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/tvnPosts"
            android:clickable="true"
            android:gravity="center"
            android:hint="title thread"
            android:textColor="@color/grey_700"
            android:textSize="13sp"
            android:textStyle="bold"
            android:focusable="true" />

        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:drawableStart="@drawable/author_selected"
            android:gravity="center_vertical"
            android:hint="author"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvnPosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/num_post"
            android:gravity="center"
            android:hint="n"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTopic"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/tvnPosts"
            android:gravity="start"
            android:hint="MOVED"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvLastAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSummary"
            android:layout_alignParentStart="true"
            android:drawableStart="@drawable/author_selected"
            android:gravity="center"
            android:hint="lastAuthor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvLastDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvLastAuthor"
            android:layout_alignBottom="@+id/tvLastAuthor"
            android:layout_toEndOf="@+id/tvLastAuthor"
            android:background="@drawable/date_back"
            android:clickable="true"
            android:gravity="center"
            android:hint="lastDate"
            android:textColor="@color/blue_600"
            android:textSize="12sp"
            android:focusable="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>